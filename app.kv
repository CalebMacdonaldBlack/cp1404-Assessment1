BoxLayout:
    orientation: 'vertical'
    id: mainBox
    Popup:
        id: popup
        title: "Add Item"
        on_parent:
            # Make popup disappear immediately
            if self.parent == mainBox: self.parent.remove_widget(self)
        BoxLayout:
            # layout for input fields and action buttons
            id: inputs
            orientation: 'vertical'
            Label:
                text: 'Item Name:'
                size_hint_y: None
                height: '48dp'
            TextInput:
                id: item_name_input
                value: ''
                size_hint_y: None
                height: '48dp'
                # the next two lines make it so that pressing Tab moves the cursor
                # to the next input field instead of entering the Tab character
                multiline: False
                write_tab: False
            Label:
                text: 'Description:'
                size_hint_y: None
                height: '48dp'
            TextInput:
                id: item_description_input
                value: ''
                size_hint_y: None
                height: '48dp'
                multiline: False
                write_tab: False
            Label:
                text: 'Price Per Day:'
                size_hint_y: None
                height: '48dp'
            TextInput:
                id: item_price_input
                value: ''
                size_hint_y: None
                height: '48dp'
                multiline: False
                write_tab: False
            Button:
                text: 'Save Entry'
                on_release: app.save_pressed(item_name_input.text, item_description_input.text, item_price_input.text)
            Button:
                text: 'Cancel'
                on_release: app.exit_popup_and_clear_fields()
            Label:
                # this is a different Label than the main GUI screen,
                # but uses the same string data
                text: app.status_text
    BoxLayout:
        id: boxLayout_buttons
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Button:
                text: 'List Items'
                id: list_items
                on_release: app.list_items_pressed(self)
            Button:
                text: 'Hire Items'
                id: hire_items
                on_release: app.hire_items_pressed(self)
            Button:
                text: 'Return Items'
                id: return_items
                on_release: app.return_items_pressed(self)
            Button:
                text: 'Confirm'
                id: confirm
                on_release: app.confirm_pressed()
            Button:
                text: 'Add New Item'
                id: add_new_item
                on_release: app.add_new_pressed(self)
        BoxLayout:
            id: boxLayout_item_buttons
            orientation: 'vertical'
    Label:
        size_hint: 1, None
        size: 0, 50
        text: app.status_text