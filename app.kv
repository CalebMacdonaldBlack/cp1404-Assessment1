BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        id: boxLayout_buttons
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Button:
                text: 'List Items'
                on_press: app.button_pressed(self, 'list_items')
            Button:
                text: 'Hire Items'
                on_press: app.button_pressed(self, 'hire_items')
            Button:
                text: 'Return Items'
                on_press: app.button_pressed(self, 'return_items')
            Button:
                text: 'Confirm'
                on_press: app.button_pressed(self, 'confirm')
            Button:
                text: 'Add New Items'
                on_press: app.button_pressed(self, 'add_new_items')
        BoxLayout:
            id: boxLayout_item_buttons
            orientation: 'vertical'
    Label:
        size_hint: 1, None
        size: 0, 50
        id: my_label
        text: app.message