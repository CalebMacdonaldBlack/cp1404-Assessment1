BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        id: boxLayout_buttons
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Button:
                text: 'List Items'
                id: list_items
                on_release: app.list_items_released(self)
            Button:
                text: 'Hire Items'
                id: hire_items
                on_release: app.hire_items_released(self)
            Button:
                text: 'Return Items'
                id: return_items
                on_release: app.return_items_released(self)
            Button:
                text: 'Confirm'
                id: confirm
                on_release: app.confirm_released(self)
            Button:
                text: 'Add New Item'
                id: add_new_item
                on_release: app.add_new_released(self)
        BoxLayout:
            id: boxLayout_item_buttons
            orientation: 'vertical'
    Label:
        size_hint: 1, None
        size: 0, 50
        id: status_label
        text: app.message